<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Dashboard"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_20dp"
        android:background="@drawable/custom_border_orange_dark">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18sp"
                android:text="@string/product_name"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivProductImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:src="@drawable/ic_vegetable"/>
                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Potato"
                    android:textColor="@color/colorRedButton"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="14"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="@dimen/margin_20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18sp"
                android:text="@string/quantity"/>
            <EditText
                android:id="@+id/etQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/custom_border_orange_primary_bg_thick"
                android:hint="00"
                android:fontFamily="@font/sevensegment"
                android:textSize="@dimen/text_size_20sp"
                android:textStyle="bold"
                android:gravity="right"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:paddingHorizontal="@dimen/padding_10dp"
                android:paddingVertical="@dimen/padding_10dp"
                android:textColor="@color/colorRedButton" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="left"
            android:paddingLeft="@dimen/margin_20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18sp"
                android:text="@string/unit"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/custom_border_orange_primary_bg_thick"
                android:text="@string/kg"
                android:gravity="center"
                android:textStyle="bold"
                android:singleLine="true"
                android:paddingHorizontal="@dimen/padding_5dp"
                android:paddingVertical="@dimen/padding_10dp"
                android:fontFamily="@font/sevensegment"
                android:textSize="@dimen/text_size_20sp"
                android:textColor="@color/colorRedButton"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="14"
            android:gravity="left"
            android:paddingLeft="@dimen/margin_20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18sp"
                android:text="@string/rate_per_unit"/>
            <EditText
                android:id="@+id/etRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/custom_border_orange_primary_bg_thick"
                android:hint="00"
                android:gravity="right"
                android:textStyle="bold"
                android:singleLine="true"
                android:inputType="number"
                android:paddingHorizontal="@dimen/padding_10dp"
                android:paddingVertical="@dimen/padding_10dp"
                android:fontFamily="@font/sevensegment"
                android:textSize="@dimen/text_size_20sp"
                android:textColor="@color/colorRedButton"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="14"
            android:gravity="left"
            android:paddingLeft="@dimen/margin_20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18sp"
                android:text="@string/total"/>
            <EditText
                android:id="@+id/etTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/custom_border_orange_primary_bg_thick"
                android:hint="00"
                android:inputType="number"
                android:gravity="right"
                android:textStyle="bold"
                android:singleLine="true"
                android:paddingHorizontal="@dimen/padding_10dp"
                android:paddingVertical="@dimen/padding_10dp"
                android:fontFamily="@font/sevensegment"
                android:textSize="@dimen/text_size_20sp"
                android:textColor="@color/colorRedButton"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="23"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:textSize="@dimen/text_size_18sp"
                android:text="@string/quantity"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_5dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btAddToCart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/add_to_cart"
                    android:textAllCaps="false"
                    android:paddingHorizontal="@dimen/padding_20dp"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:theme="@style/GreenButtonStyle" />

                <ImageView
                    android:id="@+id/ivClearDashboard"
                    android:layout_width="@dimen/height_40dp"
                    android:layout_height="@dimen/height_40dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/btAddToCart"
                    android:tint="@color/colorPrimaryDark"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:background="@drawable/custom_border_orange_dark"
                    android:src="@drawable/ic_close"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="60"
            android:paddingVertical="@dimen/padding_10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_product"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorGraytext1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_alignParentLeft="true"/>
                <EditText
                    android:layout_width="@dimen/width_250dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/search_product"
                    android:layout_centerVertical="true"
                    android:paddingHorizontal="@dimen/padding_20dp"
                    android:paddingVertical="@dimen/padding_10dp"
                    android:drawableRight="@drawable/ic_search"
                    android:drawableTint="@color/colorGraytext1"
                    android:background="@drawable/custom_border_gray"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_5dp"
                android:background="@drawable/custom_border_orange"
                android:layout_marginTop="@dimen/margin_10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:text="@string/recent_products"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentProducts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_5dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_5dp"
                android:background="@drawable/custom_border_orange"
                android:layout_marginTop="@dimen/margin_10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:text="@string/vegetables"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvVegetables"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_5dp"
                android:background="@drawable/custom_border_orange"
                android:layout_marginTop="@dimen/margin_10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:text="@string/fruits"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFruits"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="40"
            android:orientation="vertical"
            android:padding="@dimen/padding_10dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:background="@drawable/custom_primarylight_bg">

            <RelativeLayout
                android:id="@+id/rlCartTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvCartDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cart_details"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04"
                    android:paddingHorizontal="@dimen/padding_10dp"
                    android:background="@drawable/custom_indicator_bg"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tvCartDetails"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorWhite"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_payable"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_toLeftOf="@+id/tvAmountPayable"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorGraytext1"/>

                <TextView
                    android:id="@+id/tvAmountPayable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 650"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorRedButton"/>
            </RelativeLayout>

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rlCartTitle"
                android:layout_marginVertical="@dimen/margin_10dp"
                android:background="@color/colorPrimary"/>

            <LinearLayout
                android:id="@+id/rlTableTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="@string/item"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="16"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="@string/qty"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="@string/rate"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="@string/amount"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCartItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rlTableTitle"
                android:layout_above="@+id/rlCartButtons"/>


            <RelativeLayout
                android:id="@+id/rlCartButtons"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50dp"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/margin_5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivClearCart"
                    android:layout_width="@dimen/height_40dp"
                    android:layout_height="@dimen/height_40dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/btKeepPending"
                    android:tint="@color/colorPrimaryDark"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:background="@drawable/custom_border_orange_dark"
                    android:src="@drawable/ic_empty"/>

                <Button
                    android:id="@+id/btKeepPending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/keep_pending"
                    android:textAllCaps="false"
                    android:layout_toLeftOf="@+id/btCheckout"
                    android:paddingHorizontal="@dimen/padding_20dp"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:theme="@style/RedButtonStyle" />

                <Button
                    android:id="@+id/btCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/checkout"
                    android:textAllCaps="false"
                    android:paddingHorizontal="@dimen/padding_20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:theme="@style/GreenButtonStyle" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>