                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_border_red_button_1"
                android:drawableTint="@color/colorRedButton"
                android:textColor="@color/colorRedButton"
                android:gravity="center"
                android:paddingHorizontal="@dimen/padding_10dp"
                android:paddingVertical="@dimen/margin_3dp"
                android:text="@string/mail_now"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="@dimen/padding_10dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginVertical="@dimen/margin_10dp"
            android:background="@color/colorGraytext2" />

        <TextView
