<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.UpdateCrates">

    <LinearLayout
        android:id="@+id/llData"
        android:layout_above="@+id/llTotals"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/update_todays_crates_packets"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="@string/update_crates_at_the_end_of_the_day"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_20dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/custom_border_orange_dark">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="15"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_18sp"
                    android:text="@string/rfid"/>
                <EditText
                    android:id="@+id/etQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:background="@drawable/custom_border_orange_primary_bg_thick"
                    android:hint="00"
                    android:fontFamily="@font/sevensegment"
                    android:textSize="@dimen/text_size_20sp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="@dimen/padding_10dp"
                    android:paddingVertical="@dimen/padding_10dp"
                    android:textColor="@color/colorRedButton" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="left"
                android:paddingLeft="@dimen/padding_10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_18sp"
                    android:text="@string/total_weight"/>
                <EditText
                    android:id="@+id/etWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:background="@drawable/custom_border_orange_primary_bg_thick"
                    android:hint="00"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:inputType="number"
                    android:paddingHorizontal="@dimen/padding_10dp"
                    android:paddingVertical="@dimen/padding_10dp"
                    android:fontFamily="@font/sevensegment"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/colorRedButton"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="left"
                android:paddingLeft="@dimen/padding_10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_18sp"
                    android:text="@string/sold_weight"/>
                <EditText
                    android:id="@+id/etRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:background="@drawable/custom_border_orange_primary_bg_thick"
                    android:hint="00"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:inputType="number"
                    android:paddingHorizontal="@dimen/padding_10dp"
                    android:paddingVertical="@dimen/padding_10dp"
                    android:fontFamily="@font/sevensegment"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/colorRedButton"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="left"
                android:paddingLeft="@dimen/padding_10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_18sp"
                    android:text="@string/balance"/>
                <EditText
                    android:id="@+id/etTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:background="@drawable/custom_border_orange_primary_bg_thick"
                    android:hint="00"
                    android:inputType="number"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:paddingHorizontal="@dimen/padding_10dp"
                    android:paddingVertical="@dimen/padding_10dp"
                    android:fontFamily="@font/sevensegment"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/colorRedButton"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="28"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_18sp"
                    android:text="@string/product_name"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivProductImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:src="@drawable/ic_vegetable"/>
                    <TextView
                        android:id="@+id/tvProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Potato"
                        android:textColor="@color/colorRedButton"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:textSize="@dimen/text_size_18sp"
                    android:text="@string/quantity"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/add"
                        android:textAllCaps="false"
                        android:paddingHorizontal="@dimen/padding_20dp"
                        android:layout_centerVertical="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:theme="@style/GreenButtonStyle" />

                    <ImageView
                        android:id="@+id/ivClearDashboard"
                        android:layout_width="@dimen/height_40dp"
                        android:layout_height="@dimen/height_40dp"
                        android:text="@string/cancel"
                        android:textAllCaps="false"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/btAdd"
                        android:tint="@color/colorPrimaryDark"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:background="@drawable/custom_border_orange_dark"
                        android:src="@drawable/ic_close"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:paddingHorizontal="@dimen/padding_10dp"
            android:paddingVertical="@dimen/padding_7dp"
            android:layout_marginTop="@dimen/padding_10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content"
                android:text="@string/no"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="20"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content"
                android:text="@string/rfid"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="20"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content"
                android:text="@string/product"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="15"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content"
                android:text="@string/total1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="15"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content"
                android:text="@string/sold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="15"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content"
                android:text="@string/balance"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content"
                android:text="@string/action"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCrateList"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llTotals"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_30dp"
            android:paddingVertical="@dimen/padding_5dp"
            android:background="@drawable/custom_border_gray_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_weight"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="220 Kg"
                android:layout_marginTop="@dimen/margin_3dp"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:paddingHorizontal="@dimen/padding_30dp"
            android:paddingVertical="@dimen/padding_5dp"
            android:background="@drawable/custom_border_green_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_sold"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="220 Kg"
                android:layout_marginTop="@dimen/margin_3dp"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_30dp"
            android:paddingVertical="@dimen/padding_5dp"
            android:background="@drawable/custom_border_primary_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_balance"
                android:textColor="@color/colorRedButton"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="220 Kg"
                android:layout_marginTop="@dimen/margin_3dp"
                android:textColor="@color/colorRedButton"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_crates_and_packets"
                android:textAllCaps="false"
                android:paddingHorizontal="@dimen/padding_20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:theme="@style/GreenButtonStyle" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>