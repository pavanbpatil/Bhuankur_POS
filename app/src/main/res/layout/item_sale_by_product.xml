<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_border_orange"
    android:paddingHorizontal="@dimen/padding_10dp"
    android:paddingVertical="@dimen/padding_10dp"
    android:layout_marginTop="@dimen/padding_10dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/tvSrno"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_gravity="center"
        android:textColor="@color/colorRedButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_height="wrap_content"
        android:text="1"/>
    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_weight="40"
        android:layout_gravity="center"
        android:textColor="@color/colorRedButton"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_height="wrap_content"
        android:text="Potato"/>
    <TextView
        android:id="@+id/tvTotalSold"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:gravity="center"
        android:textColor="@color/colorRedButton"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_height="wrap_content"
        android:text="12"/>
    <TextView
        android:id="@+id/tvSoldAmount"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:gravity="center"
        android:textColor="@color/colorRedButton"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_height="wrap_content"
        android:text="450"/>
</LinearLayout>