<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_80dp"
    android:background="@color/colorToolbar"
    app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/splash_logo" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorGraytext1"
            android:layout_marginHorizontal="@dimen/margin_10dp"
            android:layout_marginVertical="@dimen/margin_10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:paddingHorizontal="@dimen/padding_30dp"
            android:paddingVertical="@dimen/padding_5dp"
            android:background="@drawable/custom_border_toolbar_yellow_box">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/todays_sale"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 150000"
                android:layout_marginTop="@dimen/margin_3dp"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:paddingHorizontal="@dimen/padding_30dp"
            android:paddingVertical="@dimen/padding_5dp"
            android:background="@drawable/custom_border_toolbar_yellow_box">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/todays_receipts"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="458"
                android:layout_marginTop="@dimen/margin_3dp"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:paddingHorizontal="@dimen/padding_10dp"
            android:paddingVertical="@dimen/padding_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receipt_no"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567891235458"
                android:layout_marginTop="@dimen/margin_3dp"
                android:textColor="@color/colorRedButton"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorGraytext1"
            android:layout_marginHorizontal="@dimen/margin_30dp"
            android:layout_marginVertical="@dimen/margin_10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingVertical="@dimen/padding_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POS ID: 12345"
                android:layout_marginTop="@dimen/margin_3dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 02 June 2020"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


        </LinearLayout>


    </LinearLayout>
</androidx.appcompat.widget.Toolbar>